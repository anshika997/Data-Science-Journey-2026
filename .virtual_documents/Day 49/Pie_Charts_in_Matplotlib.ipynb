


import matplotlib.pyplot as plt
plt.style.use("ggplot")# choose any style you like


# data
labels=["sachin","sehwag","kohli","yuvraj"]
runs = [18000,8000,12000,9500]
plt.title(" career runs of indian batsman")
plt.pie(runs,labels=labels)
plt.show()


colors = ['#ff9999','#66b3ff','#99ff99','#ffcc99']
plt.pie(runs,labels = labels,colors = colors)
plt.show()





plt.pie(runs,labels=labels,colors=colors,wedgeprops={'edgecolor':'black','fill':True,'linewidth':2,'linestyle':'--'})
plt.show()








explode =[0.1,0,0,0] # only highlight sachin's slice 0.1 one create a gap between in the the first slice
plt.pie(runs,labels=labels,colors=colors, explode=explode,wedgeprops={'linestyle':'solid','edgecolor':'black','linewidth':3})
plt.title("EXPLODED PIE EXAMPLE")
plt.show()





plt.pie(runs,labels=labels,colors=colors,explode = explode , wedgeprops = {'linestyle':'solid','edgecolor':'black','linewidth':1},shadow=True) # adds shadow for 3d view 
plt.show()





plt.pie(
    runs,
    labels=labels,
    colors=colors,
    explode = explode,
    wedgeprops = {'linestyle':'solid','edgecolor':'black','linewidth':1},
    shadow=True,# adds shadow for 3d view 
    startangle=40
)  
plt.show()





plt.pie(
    runs,
    labels=labels,
    colors=colors,
    explode = explode,
    wedgeprops = {'linestyle':'solid','edgecolor':'black','linewidth':1},
    shadow=True,# adds shadow for 3d view 
    autopct='%1.1f%%',# shows the actual percentage value
    startangle=25
    
)  
plt.title("CAREER RUN SHARE")
plt.show()





language=['python','Java','C++','Javascript','C#','Ruby','Go','Rust','Swift','PHP']
usage=[30,20,10,10,7,5,4,3,2,1]
colors=['#ff9999','#66b3ff','#98ff99','#ffcc79','#ff4999','#69b3ff','#99ff29','#ffcc89','#ff9979','#67b3ff']
plt.pie(usage,labels=language,autopct='%1.1f%%',startangle=25,colors=colors)
plt.title("Programming Language Usage (Crowded Example)")
plt.show()


















